<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="root" alignment="CENTER" prefHeight="353.0" prefWidth="575.0" spacing="5" styleClass="login-container" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
    <HBox alignment="TOP_CENTER" prefHeight="45.0" prefWidth="427.0">
        <Label alignment="CENTER" text="Household Organization and Management Engine">
           <font>
               <Font name="Inter Semi Bold" size="22.0"/>
           </font>
        </Label>
    </HBox>
    <VBox prefHeight="200.0" prefWidth="100.0" spacing="14" style="-fx-max-width: 300;">
        <Label text="Connect to a household">
          <font>
              <Font name="Inter Semi Bold" size="18.0"/>
          </font>
        </Label>
        <TextField fx:id="usernameField" prefWidth="306.0" promptText="Username"/>
        <PasswordField fx:id="passwordField" promptText="Password"/>
        <Button onAction="#handleLogin" text="Login"/>
    </VBox>

</VBox>
