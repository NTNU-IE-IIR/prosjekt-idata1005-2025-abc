<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<HBox fx:id="container" spacing="10"  xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" styleClass="task-wrapper">

    <HBox fx:id="taskDescriptionContainer" styleClass="task-element-wrapper, task-element-description" alignment="CENTER_LEFT">
        <Label fx:id="taskDescription" />
    </HBox>

    <ComboBox fx:id="taskStatusDropdown" styleClass="task-dropdown, task-status" />

    <ComboBox fx:id="taskPriorityDropdown" styleClass="task-dropdown, task-priority"/>

    <ComboBox fx:id="taskOwnerDropdown" styleClass="task-dropdown, task-owner" />

    <Button fx:id="deleteTaskButton" styleClass="task-icon-button" prefHeight="46">
        <graphic>
            <ImageView fitHeight="20" preserveRatio="true">
                <Image url="@../../icons/delete-icon.png" />
            </ImageView>
        </graphic>
    </Button>
</HBox>